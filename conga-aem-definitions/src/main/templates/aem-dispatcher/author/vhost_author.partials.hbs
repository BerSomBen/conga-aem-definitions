########## TEST ACCESS RESTRICTONS ###############

{{#each dispatcher.accessRestrictionLocation}}
  <Location "{{this.location}}">
{{~#ifEquals this.type "allow"}}
    <IfVersion < 2.4>
      Allow from all
    </IfVersion>
    <IfVersion >= 2.4>
      Require all granted
    </IfVersion>
{{~else}}
    <IfVersion < 2.4>
      Order Deny,Allow
      Deny from all
    </IfVersion>
    <IfVersion >= 2.4>
      Require all denied
    </IfVersion>
{{~/ifEquals}}
  </Location>
{{/each}}

{{#each dispatcher.accessRestrictionSelector}}
  <LocationMatch ".*{{regexQuote this.selector}}.*">
{{~#ifEquals this.type "allow"}}
    <IfVersion < 2.4>
      Allow from all
    </IfVersion>
    <IfVersion >= 2.4>
      Require all granted
    </IfVersion>
{{~else}}
    <IfVersion < 2.4>
      Order Deny,Allow
      Deny from all
    </IfVersion>
    <IfVersion >= 2.4>
      Require all denied
    </IfVersion>
{{~/ifEquals}}
  </LocationMatch>
{{/each}}

