# This files contains rules that apply to all AEM publish instance vhosts for all tenants


#### General settings ####

# Do not allow RFC 2616 trace requests
TraceEnable Off

# Enable rewrite engine
RewriteEngine On


#### Enable AEM dispatcher module ####

<Location />
  <IfModule disp_apache2.c>
    ModMimeUsePathInfo On
    # enable dispatcher for ALL requests.
    SetHandler dispatcher-handler
  </IfModule>
  Options FollowSymLinks
  AllowOverride None
</Location>


#### Content disposition header for downloads ####

<LocationMatch "^.*/dam/.*\.download_attachment\..*$">
  Header set Content-Disposition: attachment
</LocationMatch>


#### Cache-control, noindex for some non-html files ####

Header set Cache-Control "public, must-revalidate"
<FilesMatch ".*\.(css|js)$">
  Header set X-Robots-Tag "noindex"
</FilesMatch>
<FilesMatch ".*\.sitemap\.xml$">
  Header set X-Robots-Tag "noindex"
</FilesMatch>


#### Deny access to sensitive areas ####

<Location "/admin">
  Deny from all
</Location>
<Location "/apps">
  Deny from all
</Location>
<Location "/bin">
  Deny from all
</Location>
<Location "/crx">
  Deny from all
</Location>
<Location "/etc">
  Deny from all
</Location>
<Location "/home">
  Deny from all
</Location>
<Location "/libs">
  Deny from all
</Location>
<Location "/system/console">
  Deny from all
</Location>
<Location "/var">
  Deny from all
</Location>

# Allow access to clientlibs
<Location "/etc/clientlibs">
  Allow from all
</Location>

# Allow dispatcher flushing only from defined hosts
<Location "/dispatcher">
  Order Deny,Allow
  Deny from all
{{~#if dispatcher.allowFlushFrom}}
  Allow from {{dispatcher.allowFlushFrom}}
{{~/if}}
</Location>


#### Deny access to dangerous selectors ####

#match *.infinity.json
<LocationMatch "^/.*\.infinity\.json.*$">
  Deny from all
</LocationMatch>

# match *.-1.json and similar
<LocationMatch "^/.*\.-[0-9]+\.json.*$">
  Deny from all
</LocationMatch>

# match *.tidy.json
<LocationMatch "^/.*\.tidy\.json.*$">
  Deny from all
</LocationMatch>

# match *.query.json
<LocationMatch "^/.*\.query\.json.*$">
  Deny from all
</LocationMatch>

# match sysview.xml
<LocationMatch "^/.*\.sysview\.xml.*$">
  Deny from all
</LocationMatch>

# match docview.json/xml
<LocationMatch "^/.*\.docview\.(json|xml).*$">
  Deny from all
</LocationMatch>

# match feed/feedentry.*
<LocationMatch "^/.*\.feed(entry)?\.*.*$">
  Deny from all
</LocationMatch>

# match form.*
<LocationMatch "^/.*\.form\.*.*$">
  Deny from all
</LocationMatch>
